<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>
    
    <style name="icon.left" parent="icon">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16dp</item>


    </style>

    <style name="icon.right" parent="icon">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32dp</item>
    </style>
    
    <style name="background">
        <item name="android:color">@color/grey_high</item>

    </style>

    <style name="view">
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal_16dp</item>

    </style>



    <style name="view2">
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_alignRight">@+id/view1</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal_16dp</item>

    </style>
</resources>
